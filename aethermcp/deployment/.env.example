# AetherMCP Environment Variables
# Copy this to .env and fill in your values

# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/aethermcp
REDIS_URL=redis://localhost:6379

# Application
AETHERMCP_ENV=production
AETHERMCP_PORT=8443
AETHERMCP_HOST=0.0.0.0

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/aethermcp.log

# Security
SECRET_KEY=change_this_to_a_random_secret_key
JWT_SECRET=change_this_to_another_random_secret

# Governance
DEFAULT_BUDGET=100.0
ENABLE_COGNITIVE_GUARDIAN=true
ENABLE_SENTINELS=true

# Provenance
PROVENANCE_STORAGE=postgresql
PROVENANCE_EXPORT_DIR=data/provenance
